@if (IsOpen)
{
    <div class="fixed inset-0 z-50 flex items-center justify-center bg-black/60 p-4">
        <div class="w-full max-w-lg rounded-xl border border-nebula-border bg-nebula-surface p-5 shadow-2xl">
            <h3 class="text-lg font-semibold">@Title</h3>
            <p class="mt-2 text-sm text-nebula-muted">@Message</p>
            <div class="mt-5 flex justify-end gap-3">
                <button class="rounded-lg border border-nebula-border px-4 py-2 text-sm" @onclick="OnCancel">
                    Cancel
                </button>
                <button class="rounded-lg border border-red-500 px-4 py-2 text-sm text-red-200 hover:bg-red-500/20" @onclick="OnConfirm">
                    Confirm
                </button>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public bool IsOpen { get; set; }

    [Parameter]
    public string Title { get; set; } = "Confirm Action";

    [Parameter]
    public string Message { get; set; } = string.Empty;

    [Parameter]
    public EventCallback OnConfirm { get; set; }

    [Parameter]
    public EventCallback OnCancel { get; set; }
}
