{
  "mcpServers": {
    "nebula-rag": {
      "type": "stdio",
      "command": "podman",
      "env": {
        "NEBULARAG_PathMappings": "${workspaceFolder:NebulaRAG}=/workspace"
      },
      "args": [
        "run",
        "--rm",
        "-i",
        "--pull=never",
        "--memory=2g",
        "--cpus=1.0",
        "--mount",
        "type=bind,source=${workspaceFolder:NebulaRAG},target=/workspace",
        "--workdir",
        "/workspace",
        "--env-file",
        "${workspaceFolder:NebulaRAG}/.nebula.env",
        "localhost/nebula-rag-mcp:latest",
        "--skip-self-test"
      ]
    }
  },
  "servers": {
